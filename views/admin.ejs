            <div class="modal-dialog">
                <div class="modal-content">
                    <header class="head-form mb-0">
                        <h3 id="header-title">Quản lý sản phẩm</h3>
                    </header>
                    <!-- Modal body -->
                    <div class="modal-body">
                        <form role="form" id="formPhone">
                            <div class="form-group">
                                <label for="name">Tên </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa-solid fa-mobile-screen-button"></i></span>
                                    </div>
                                    <input
                                            type="text"
                                            name="name"
                                            id="name"
                                            class="form-control input-sm"
                                            placeholder="Tên sản phẩm"
                                    />
                                </div>
                                <span class="sp-thongbao" id="tbname"></span>
                            </div>
                            <div class="form-group">
                                <label for="price">Giá</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-regular fa-dollar-sign"></i></span>
                                    </div>
                                    <input
                                            type="text"
                                            name="name"
                                            id="price"
                                            class="form-control input-sm"
                                            placeholder="Giá"
                                    />
                                </div>
                                <span class="sp-thongbao" id="tbprice"></span>
                            </div>
                            <div class="form-group">
                                <label for="screen">Màn hình</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-mobile-screen"></i></span>
                                    </div>
                                    <input
                                            type="text"
                                            name="email"
                                            id="screen"
                                            class="form-control input-sm"
                                            placeholder="Màn hình"
                                    />
                                </div>
                                <span class="sp-thongbao" id="tbscreen"></span>
                            </div>
                            <div class="form-group">
                                <label for="backCam">Camera sau</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-camera"></i></span>
                                    </div>
                                    <input
                                            type="text"
                                            name="name"
                                            id="backCam"
                                            class="form-control"
                                            placeholder="Camera sau"
                                    />
                                </div>
                                <span class="sp-thongbao" id="tbbackCam"></span>
                            </div>
                            <div class="form-group">
                                <label for="frontCam">Camera phía trước</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-camera"></i></span>
                                    </div>
                                    <input
                                            type="text"
                                            name="name"
                                            id="frontCam"
                                            class="form-control"
                                            placeholder="Camera phía trước"
                                    />
                                </div>
                                <span class="sp-thongbao" id="tbfrontCam"></span>
                            </div>
                            <div class="form-group">
                                <label for="img">Link hình ảnh</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-link"></i></span>
                                    </div>
                                    <input
                                            type="text"
                                            name="name"
                                            id="img"
                                            class="form-control"
                                            placeholder="Link hình ảnh"
                                    />
                                </div>
                                <span class="sp-thongbao" id="tbimg"></span>
                            </div>
                            <div class="form-group">
                                <label for="desc">Mô tả</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-comment"></i></span>
                                    </div>
                                    <input
                                            type="text"
                                            name="name"
                                            id="desc"
                                            class="form-control"
                                            placeholder="Mô tả"
                                    />
                                </div>
                                <span class="sp-thongbao" id="tbdesc"></span>
                            </div>
                            <div class="form-group">
                                <label for="type">Chọn thương hiệu</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-signature"></i></span>
                                    </div>
                                    <select class="form-control" name="chucvu" id="type">
                                        <option selected disabled>Chọn thương hiệu</option>
                                        <option>Apple</option>
                                        <option>Samsung</option>
                                        <option>Xiaomi</option>
                                        <option>Oppo</option>
                                    </select>
                                </div>
                                <span class="sp-thongbao" id="tbtype"></span>
                            </div>
                        </form>
                    </div>
                    <!-- Modal footer -->
                    <div class="modal-footer" id="modal-footer">
